<div class="container">
<div class="wrapper">
    <table class="table">
        <tr>
            <th colspan="3">
                <h2>All posts of user {{{user.username}}}</h2>
            </th>
        </tr>
            {{#each post as |posts|}}
                <tr>
                    <td>
                        <a href="/view/{{{posts._id}}}">{{{posts.title}}}</a>
                    </td>
                    <td>
                        {{posts.c_date}}
                    </td>
                </tr>
            {{/each}}
    </table>
    <a href="/" class="btn btn-primary">Return home</a>
</div>
</div>